---
import "../styles/prism.css";

import CustomContainer from "../components/container.astro";
import CopyUrl from "../components/copyUrl";
import Layout from "./index.astro";

const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title} description={frontmatter.description}>
  <div
    class="py-4 w-full bg-neutral-900 text-neutral-300 hover:text-white duration-100 transition-all"
  >
    <CustomContainer>
      <div class="flex flex-row items-center justify-between">
        <div class="flex flex-row items-center">
          <a href="/blog" class="flex flex-row items-center font-bold text-xl"
            >Blog</a
          >
        </div>
        <CopyUrl url={`pheralb.dev${frontmatter.url}`} client:load />
      </div>
    </CustomContainer>
  </div>

  <div class="max-w-4xl px-4 py-5 mx-auto md:py-14 md:px-0">
    <div class="pb-4 border-b border-neutral-800">
      <h1 class="mb-2 text-4xl font-bold">{frontmatter.title}</h1>
      <p class="text-xl text-gray-400">
        {frontmatter.description}
      </p>
    </div>
    <article class="mt-8 prose max-w-none prose-invert prose-h3:mb-0">
      <slot />
    </article>
  </div>
</Layout>
