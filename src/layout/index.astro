---
// Global styles:
import "../styles/globals.css";

// Components:
import Warning from "../components/warning.astro";
import Header from "../components/header.astro";

// Page props:
interface Props {
  pageTitle: string;
  description: string;
}
const { pageTitle, description } = Astro.props;
---

<html lang="en">
  <head>
    <!-- General -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Pablo Hernández" />
    <meta name="image" property="og:image" content="/images/og_image.png" />
    <!-- OG Image -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Pablo Hernández" />
    <meta
      property="og:description"
      content={description || "Building amazing things"}
    />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:url" content="https://www.pheralb.dev/" />
    <meta property="og:site_name" content="Pablo Hernández - @pheralb" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pablo Hernández" />
    <meta
      name="twitter:description"
      content={description || "Building amazing things"}
    />
    <meta name="twitter:image" content="/images/og_image.png" />
    <meta name="twitter:image:alt" content="Personal Website" />
    <meta name="twitter:creator" content="@pheralb_" />
    <!-- Title -->
    <title>Pablo Hernández | {pageTitle}</title>
  </head>
  <body class="bg-midnight text-white">
    <Warning />
    <Header />
    <slot />
  </body>
</html>
